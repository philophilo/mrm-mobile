<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room_booking.building.BuildingFragment">

    <TextView
        android:id="@+id/building_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="309dp"
        android:layout_marginStart="309dp"
        android:layout_marginTop="121dp"
        android:gravity="center"
        android:text="@string/building_text"
        android:textAlignment="center"
        android:textSize="24sp"
        style="@style/ten_inch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/building_grid_view"
        android:name=".room_booking.building.BuildingFragment"
        android:layout_width="750dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building_text"
        app:layout_constraintVertical_bias="0.732"
        tools:listitem="@layout/partial_building_button" />

</android.support.constraint.ConstraintLayout>
